<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wardrobe_navigation"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.group5.clothing_advisor.ui.wardrobe.categories.CategoriesFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_showClothes"
            app:destination="@id/clothesFragment" />
    </fragment>

    <fragment
        android:id="@+id/clothesFragment"
        android:name="com.group5.clothing_advisor.ui.wardrobe.clothes.ClothesFragment"
        android:label="fragment_clothes"
        tools:layout="@layout/fragment_clothes">
        <argument
            android:name="selectedCategory"
            app:argType="com.group5.clothing_advisor.data.CategoryResponseItem"
            />
    </fragment>
</navigation>